{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/client",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/social-logo",
      "destination": "/api/social-logo.js"
    },
    {
      "source": "/api/debug-image",
      "destination": "/api/debug-image.js"
    },
    {
      "source": "/api/images/courses/(.*)",
      "destination": "/api/course-image/[...path].js?path=courses/$1"
    },
    {
      "source": "/api/course-image/(.*)",
      "destination": "/api/course-image/[...path].js?path=$1"
    },
    {
      "source": "/api/images/(.*)",
      "destination": "/api/images/[...path].js"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ]
} 