{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/social-logo",
      "dest": "/api/social-logo.js"
    },
    {
      "src": "/api/debug-image",
      "dest": "/api/debug-image.js"
    },
    {
      "src": "/api/images/courses/(.*)",
      "dest": "/api/course-image/[...path].js?path=courses/$1"
    },
    {
      "src": "/api/course-image/(.*)",
      "dest": "/api/course-image/[...path].js?path=$1"
    },
    {
      "src": "/api/images/(.*)",
      "dest": "/api/images/[...path].js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/favicon.png",
      "dest": "/favicon.png"
    },
    {
      "src": "/(.*)",
      "dest": "/api/ssr"
    }
  ]
} 