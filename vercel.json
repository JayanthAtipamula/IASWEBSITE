{
  "rewrites": [
    {
      "source": "/api/social-logo",
      "destination": "/api/social-logo"
    },
    {
      "source": "/api/debug-image",
      "destination": "/api/debug-image"
    },
    {
      "source": "/api/images/courses/(.*)",
      "destination": "/api/course-image/[...path]?path=courses/$1"
    },
    {
      "source": "/api/course-image/(.*)",
      "destination": "/api/course-image/[...path]?path=$1"
    },
    {
      "source": "/api/images/(.*)",
      "destination": "/api/images/[...path]"
    },
    {
      "source": "/(.*)",
      "destination": "/api/ssr"
    }
  ],
  "trailingSlash": false
} 